{
  "name": "codeguard-ai",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "docs:build": "cd docs && mkdocs build",
    "docs:serve": "cd docs && mkdocs serve",
    "db:push": "pnpm --filter backend db:push",
    "db:studio": "pnpm --filter backend db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
