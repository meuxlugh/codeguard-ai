# Database (Neon PostgreSQL recommended)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Anthropic API Key (for Claude CLI)
ANTHROPIC_API_KEY=sk-ant-xxx

# Server
PORT=3001
# Frontend URL for redirects
FRONTEND_URL=http://localhost:5173
# Session secret for cookie signing
SESSION_SECRET=your-super-secret-key-here

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Repositories directory
REPOS_DIR=./repos

# Claude CLI Configuration (for autonomous VM operation)
# Path to claude CLI binary (default: claude)
CLAUDE_CMD=claude
# Max conversation turns to prevent runaway (default: 50)
CLAUDE_MAX_TURNS=50

# Spikelog Metrics (optional - tracking disabled if not set)
SPIKELOG_API_KEY=
